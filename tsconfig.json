{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@layouts/*": ["layouts/*"],
      "@components/*": ["components/*"], // Ensures MarketRibbon import works
      "@layoutComponents/*": ["layouts/components/*"], // Added for components within layouts
      "@partials/*": ["layouts/partials/*"],
      "@shortcodes/*": ["layouts/shortcodes/*"],
      "@config/*": ["config/*"],
      "@json/*": ["json/*"],
      "@hooks/*": ["hooks/*"],
      "@lib/*": ["lib/*"],
      "@context/*": ["context/*"],
      "@styles/*": ["styles/*"],
      "@content/*": ["content/*"],
      "@layouts/components/ui/*": ["components/ui/*"] // Added for shadcn UI components
      // Note: If you previously used "@components/*" to point to "layouts/components/*",
      // you might need to update those imports or create a different alias for "layouts/components/*"
      // (e.g., "@layoutComponents/*": ["layouts/components/*"]) to avoid conflicts.
      // For this task, "@components/*" needs to point to the top-level "components/" directory.
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx"
  ],
  "exclude": [
    "node_modules"
  ]
}